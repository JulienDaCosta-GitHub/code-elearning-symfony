{% extends 'base.html.twig' %}

{% block body %}
	<h1 class="mt-3 ml-3">{{chapitre.titre}}</h1>
	<p class="ml-3">{{chapitre.date|date('d/m/Y')}}</p>

	{% if is_granted('ROLE_USER') %}

	<div class="formModification ml-3 mt-5">
		<h2>Modifier le chapitre</h2>
		{{ form(maj) }}
	</div>

	{% endif %}

	<h3 class="ml-3">Cours du chapitre</h3>
	{% include 'cours/liste.html.twig' with {'AllCours': chapitre.AllCours} %}

{% endblock %}