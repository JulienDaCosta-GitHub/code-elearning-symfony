{% extends 'base.html.twig' %}

{% block body %}
<h1 class="mt-3 ml-3">{{cours.titre}}</h1>
<p class="ml-3">{{cours.contenu}}</p>
<p class="ml-3">{{cours.date|date('d/m/Y')}}</p>
<p class="ml-3">{{cours.chapitre}}</p>

{% if is_granted('ROLE_USER') %}

<div class="formModification ml-3 mt-5">
<h2>Modifier le cours</h2>
{{form(maj)}}
</div>

{% endif %}

{% endblock %}